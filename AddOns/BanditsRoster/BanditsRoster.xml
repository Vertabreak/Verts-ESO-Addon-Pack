<GuiXml>
    <Controls>
        <TopLevelControl name="BanditsRosterFrame" inherits="ZO_RightPanelFootPrint" hidden="true">
            <Controls>
                <Control name="$(parent)Title">
                    <Dimensions x="1024" y="50" />
                    <Anchor point="RIGHT" relativeTo="GuiRoot" offsetX="30" offsetY="-335" />
                    <Controls>
                        <Label name="$(parent)Label" font="ZoFontWindowTitle" wrapMode="ELLIPSIS" maxLineCount="1" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" modifyTextType="UPPERCASE">
                            <Dimensions x="500" />
                            <Anchor point="LEFT" offsetX="50" />
                        </Label>

                        <Texture name="$(parent)Divider" textureFile="EsoUI/Art/Miscellaneous/centerscreen_topDivider.dds">
                            <Dimensions x="1024" y="4" />
                            <Anchor point="BOTTOM"/>
                        </Texture>
                    </Controls>
                </Control>

                <Backdrop name="$(parent)Search" tier="HIGH" inherits="ZO_SingleLineEditBackdrop_Keyboard">
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" offsetX="-38" offsetY="28"/>
                    <Dimensions x="270"/>
                    <Controls>
                        <EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText">
                            <OnInitialized>
                                ZO_EditDefaultText_Initialize(self, "Enter UserId.")
                            </OnInitialized>
                        </EditBox>
                    </Controls>
                </Backdrop>

                <Label name="$(parent)SearchLabel" text="Filter by:" font="ZoFontGameLargeBold" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL">
                    <Anchor point="RIGHT" relativeTo="$(parent)Search" relativePoint="LEFT"  offsetX="-5"/>
                </Label>

                <Label name="$(parent)Header" width="200" height="10" font="ZoFontWindowTitle" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED" modifyTextType="UPPERCASE" text="Bandits Roster">
                    <Anchor point="TOPLEFT" offsetX="-10" offsetY="28"/>
                </Label>

                <Control name="$(parent)Filters">
                    <Dimensions x="240"/>
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Header" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="16"/>
                    <Controls>
                        <Label name="$(parent)GuildFilterLabel" text="Guilds:" font="ZoFontGameLargeBold" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0"/>
                        </Label>

                        <Control name="$(parent)GuildFilter" inherits="ZO_ComboBox">
                            <Dimensions x="200" y="32"/>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)GuildFilterLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                        </Control>
                    </Controls>
                </Control>

                <Control name="$(parent)PlayerLists">
                    <Dimensions x="240"/>
                    <Anchor point="TOPLEFT" relativeTo="$(parent)FiltersGuildFilter" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="16"/>
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                    <Controls>
                        <Label name="$(parent)AddListLabel" text="Add player list:" font="ZoFontGameLargeBold" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0"/>
                        </Label>

                        <Backdrop name="$(parent)AddList" inherits="ZO_SingleLineEditBackdrop_Keyboard">
                            <Dimensions x="200" />
                            <Anchor point="TOPLEFT" relativeTo="$(parent)AddListLabel" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                            <Controls>
                                <EditBox name="$(parent)Box" inherits="ZO_DefaultEditForBackdrop ZO_EditDefaultText">
                                    <OnInitialized>
                                        ZO_EditDefaultText_Initialize(self, "Enter player list name.")
                                    </OnInitialized>
                                </EditBox>
                            </Controls>
                        </Backdrop>

                        <Control name="$(parent)Headers">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)AddList" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                            <Dimensions y="32"/>
                            <Controls>
                                <Control name="$(parent)Name" inherits="ZO_SortHeaderAppearance">
                                    <OnInitialized>
                                        ZO_SortHeader_Initialize(self, "Name", "name", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                                    </OnInitialized>
                                    <Anchor point="TOPLEFT" relativeTo="$(parent)"/>
                                    <Dimensions x="200" y="30"/>
                                </Control>
                            </Controls>
                        </Control>

                        <Control name="$(parent)List" inherits="ZO_ScrollList">
                            <Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="-32"/>
                        </Control>
                    </Controls>
                </Control>

                <Control name="$(parent)Headers">
                    <Anchor point="TOPLEFT" offsetX="280" offsetY="75"/>
                    <Dimensions y="32"/>
                    <Controls>
                        <Control name="$(parent)DisplayName" inherits="ZO_SortHeader">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, "UserId", "displayName", ZO_SORT_ORDER_UP, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)"/>
                            <Dimensions x="250" y="32"/>
                        </Control>
                        <Control name="$(parent)Guilds" inherits="ZO_SortHeaderAppearance">
                            <OnInitialized>
                                ZO_SortHeader_Initialize(self, "Guilds", "guilds", ZO_SORT_ORDER_DOWN, TEXT_ALIGN_LEFT, "ZoFontGameLargeBold")
                            </OnInitialized>
                            <Anchor point="TOPLEFT" relativeTo="$(parent)DisplayName" relativePoint="TOPRIGHT"/>
                            <Dimensions x="400" y="32"/>
                        </Control>
                    </Controls>
                </Control>

                <Control name="$(parent)List" inherits="ZO_ScrollList">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)Headers" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="0" offsetY="-32"/>
                </Control>

                <Label name="$(parent)Footer" width="100" height="25" font="ZoFontWinH5" color="80FFFFFF" text="v0.0.1 |ca8c2ed@zelenin|r">
                    <Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="0"/>
                </Label>
            </Controls>
        </TopLevelControl>

        <Button name="BanditsRosterRow" mouseEnabled="true" virtual="true">
            <Dimensions y="30"/>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT"/>

            <OnMouseUp>
                BanditsRoster.list.OnMouseUp(self, button, upInside)
            </OnMouseUp>

            <Controls>
                <Label name="$(parent)DisplayName" font="ZoFontGame" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)"/>
                    <Dimensions x="250" y="30"/>
                </Label>

                <Label name="$(parent)Guilds" font="ZoFontGame" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)DisplayName" relativePoint="TOPRIGHT"/>
                    <Dimensions x="400" y="30"/>
                </Label>

                <Texture name="$(parent)BG" inherits="ZO_ThinListBgStrip" />
            </Controls>
        </Button>

        <Button name="PlayerListRow" mouseEnabled="true" virtual="true">
            <Dimensions y="30"/>
            <Anchor point="TOPLEFT"/>
            <Anchor point="BOTTOMRIGHT"/>

            <OnMouseUp>
                BanditsRoster.playerLists.OnMouseUp(self, button, upInside)
            </OnMouseUp>

            <Controls>
                <Label name="$(parent)Name" font="ZoFontGame" wrapMode="ELLIPSIS">
                    <Anchor point="TOPLEFT" relativeTo="$(parent)"/>
                    <Dimensions x="200" y="30"/>
                </Label>

            </Controls>
        </Button>
    </Controls>
</GuiXml>
